{
  "manifest_version": 3,
  "name": "QR Code Snip & Scan",
  "version": "2.0",
  "description": "Snip and scan QR codes from any webpage",
  "permissions": [
    "activeTab",
    "scripting",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "QR Code Snip & Scan"
  },
  "web_accessible_resources": [
    {
      "resources": ["jsQR.js"],
      "matches": ["<all_urls>"]
    }
  ]
}